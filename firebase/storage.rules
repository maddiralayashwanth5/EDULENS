rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
        firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    function isValidImage() {
      return request.resource.contentType.matches('image/.*') &&
             request.resource.size < 5 * 1024 * 1024; // 5MB max
    }
    
    function isValidDocument() {
      return request.resource.contentType.matches('(text/csv|application/vnd.ms-excel|application/vnd.openxmlformats-officedocument.spreadsheetml.sheet)') &&
             request.resource.size < 10 * 1024 * 1024; // 10MB max
    }
    
    // Institution images
    match /institutions/{institutionId}/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin() && isValidImage();
    }
    
    // User avatars
    match /users/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if isAuthenticated() && 
                      request.auth.uid == userId && 
                      isValidImage();
    }
    
    // Bulk upload files (admin only)
    match /uploads/{allPaths=**} {
      allow read: if isAdmin();
      allow write: if isAdmin() && isValidDocument();
    }
  }
}
